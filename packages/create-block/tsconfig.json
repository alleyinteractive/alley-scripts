{
  "extends": "@alleyinteractive/tsconfig/base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "target": "ES2022",
  },
  "exclude": [
    "dist",
    "node_modules",
    "tests",
    "jest.config.ts",
  ],
  "include": [
    "src/**/*",
    "index.ts"
  ]
}