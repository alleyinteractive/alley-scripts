{
  "extends": "@alleyinteractive/tsconfig/base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "outDir": "dist",
    "target": "ES2022",
    "paths": {
      "webpack": ["../../node_modules/webpack/types"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "config/extended.config.test.ts",
    "config/extended.config.ts",
    "config/webpack.config.ts",
    "utils/**/*",
    "index.ts"
  ]
}
