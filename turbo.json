{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**",
        "dist/**"
      ]
    },
    "test": {
      "dependsOn": [],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.js",
        "test/**/*.ts",
        "test/**/*.js",
        "test/**/*.tsx",
        "test/**/*.jsx"
      ]
    },
    "lint": {
      "dependsOn": [
        "build"
      ]
    }
  }
}
